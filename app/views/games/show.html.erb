<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=AIzaSyAA6X-ZYfSZAO5QvLVAiZutl-R9sINRdAc&libraries=geometry&language=&hl=&region="></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div class="page-header">
  <%= link_to games_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <% if @game.owner == current_user.name %>
    <%= link_to edit_game_path(@game), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Edit
    <% end %>
  <% end %>
  <h1>Show game</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @game.title %></dd>

  <dt>Location:</dt>
  <dd><%= @game.location %></dd>

  <dt>Address:</dt>
  <dd><%= @game.address %></dd>

  <dt>Latitude:</dt>
  <dd><%= @game.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @game.longitude %></dd>

  <dt>Owner:</dt>
  <dd><%= @game.owner %></dd>

  <dt>Date:</dt>
  <dd><%= @game.date %></dd>

  <dt>Time:</dt>
  <dd><%= @game.time %></dd>

  <dt>Created:</dt>
  <dd><%= @game.created_at %></dd>

  <dt>Joined Users:</dt>
    <% @game.users.each do |user| %>
      <dd><%= user.name %></dd>
      <dd><%= user.age %></dd>
      <dd><%= user.gender %></dd>
    <%end%>

</dl>


  <!--   //map -->
  <div style='width: 800px;'>
    <div id="map" style='width: 600px; height: 400px; align-content: center'></div>
  </div>

<!--   //google maps API javascript -->

  <script type="text/javascript">

    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });

  </script>
